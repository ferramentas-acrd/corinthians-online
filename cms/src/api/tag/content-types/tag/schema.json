{
  "kind": "collectionType",
  "collectionName": "tags",
  "info": {
    "singularName": "tag",
    "pluralName": "tags",
    "displayName": "Tag",
    "description": "Tags para categorização de artigos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "color": {
      "type": "string",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "default": "#6b7280"
    },
    "noticias": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::noticia.noticia",
      "inversedBy": "tags"
    },
    "betting_predictions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::betting-prediction.betting-prediction",
      "inversedBy": "tags"
    }
  }
}