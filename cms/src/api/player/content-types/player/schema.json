{
  "kind": "collectionType",
  "collectionName": "players",
  "info": {
    "singularName": "player",
    "pluralName": "players",
    "displayName": "Player",
    "description": "Jogadores do elenco"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "number": {
      "type": "integer",
      "min": 1,
      "max": 99
    },
    "position": {
      "type": "enumeration",
      "enum": [
        "Goleiro",
        "Lateral-direito",
        "Lateral-esquerdo",
        "Zagueiro",
        "Volante",
        "Meio-campista",
        "Meia-atacante",
        "Ponta-direita",
        "Ponta-esquerda",
        "Centroavante"
      ],
      "required": true
    },
    "age": {
      "type": "integer",
      "min": 16,
      "max": 50
    },
    "nationality": {
      "type": "string",
      "maxLength": 50,
      "default": "Brasil"
    },
    "height": {
      "type": "decimal",
      "min": 1.50,
      "max": 2.20
    },
    "weight": {
      "type": "integer",
      "min": 50,
      "max": 120
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "team": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team.team"
    },
    "marketValue": {
      "type": "decimal",
      "min": 0
    },
    "contractUntil": {
      "type": "date"
    },
    "biography": {
      "type": "text"
    },
    "socialMedia": {
      "type": "json"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "active": {
      "type": "boolean",
      "default": true
    }
  }
}