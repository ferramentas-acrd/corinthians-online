{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game",
    "description": "Jogos e partidas"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "homeTeam": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team.team",
      "required": true
    },
    "awayTeam": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team.team",
      "required": true
    },
    "homeScore": {
      "type": "integer",
      "min": 0
    },
    "awayScore": {
      "type": "integer",
      "min": 0
    },
    "matchDate": {
      "type": "datetime",
      "required": true
    },
    "stadium": {
      "type": "string",
      "maxLength": 100
    },
    "competition": {
      "type": "string",
      "maxLength": 100,
      "required": true
    },
    "round": {
      "type": "string",
      "maxLength": 50
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Agendado",
        "Ao vivo",
        "Finalizado",
        "Adiado",
        "Cancelado"
      ],
      "default": "Agendado",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "ticketUrl": {
      "type": "string",
      "maxLength": 255
    },
    "broadcastInfo": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "matchDate"
    }
  }
}