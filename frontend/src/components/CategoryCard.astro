---
import { getCategoryUrl } from '../lib/routes';

export interface Props {
  category: {
    name: string;
    slug: string;
  };
  postCount?: number;
}

const { category, postCount } = Astro.props;
---

<a 
  href={getCategoryUrl(category.slug)}
  class="block p-6 bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow"
>
  <h3 class="text-xl font-bold text-gray-900 mb-2">{category.name}</h3>
  {postCount !== undefined && (
    <p class="text-gray-600">{postCount} publicações</p>
  )}
</a>