// Processar dados das marcas para o formato esperado
const rankings = marcasData.map((marca) => {
  let logoUrl = null;
  if (marca.marca_logo) {
    const imageUrl = getImageUrl(marca.marca_logo, 'thumbnail');
    // Se a URL já começa com http, usar diretamente, senão adicionar o base URL
    logoUrl = imageUrl.startsWith('http') ? imageUrl : `${strapiBaseUrl}${imageUrl}`;
  }
  
  return {
    name: marca.marca,
    url: marca.marca_link,
    logo: logoUrl
  };
});
---

<SingleSidebarBanner banners={banners} />

<!-- Ranking das casas de apostas -->
<section class="sidebar-section ranking-section">
  <div class="sidebar-heading">
    <h3>Ranking das casas de apostas</h3>
  </div>
  <ul class="ranking-list">
    {rankings.map((item, index) => (
      <li class="ranking-item">
        <div class="ranking-number">{index + 1}</div>
        {item.logo ? (
          <img src={item.logo} alt={`Logo ${item.name}`} class="ranking-logo" width="40" height="40" loading="lazy" />
        ) : (
          <div class="ranking-logo-placeholder">{item.name.charAt(0).toUpperCase()}</div>
        )}
        <div class="ranking-info">
          <div class="ranking-name">{item.name}</div>
          <span class="ranking-link">Análise</span>
        </div>
        <a href={item.url} class="ranking-button" target="_blank" rel="noopener noreferrer">
          Ver site
          <svg width="12" height="12" fill="currentColor" viewBox="0 0 24 24">
            <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
          </svg>
        </a>
      </li>
    ))}
  </ul>
</section>

<!-- Últimas Notícias -->
<section class="sidebar-section">
  <div class="sidebar-heading">
    <h3>Últimas Notícias</h3>
  </div>
  <ul class="latest-news-list">
    {recentNews.map((post) => (
      <li class="latest-news-item">
        <a href={`/apostas/${post.slug}`}>
          {post.category && (
            <span class={`latest-news-category ${post.category.slug}`}>
              {post.category.name}
            </span>
          )}
          <h4 class="latest-news-title">{post.title}</h4>
        </a>
      </li>
    ))}
  </ul>
</section>



<style>
  .ranking-number {
    width: 24px;
    height: 24px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.75rem;
    flex-shrink: 0;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    border-color: var(--social-color);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .social-link:hover .social-icon {
    color: var(--social-color);
  }

  .social-icon {
    width: 20px;
    height: 20px;
    color: #6b7280;
    transition: color 0.3s ease;
  }

  .social-name {
    font-size: 0.8125rem;
    color: var(--color-text);
    font-family: "Roboto", sans-serif;
  }

  .ranking-logo {                   
    width: 64px;
    height: 40px;
    object-fit: contain;
    margin-left: 8px;
    margin-right: 8px;
    border-radius: 0;
  }

  .ranking-logo-placeholder {
    width: 64px;
    height: 40px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: var(--color-text-light);
    font-size: 0.875rem;
    margin-left: 8px;
    margin-right: 8px;
    border-radius: 0;
  }

  .ranking-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ranking-item {
    display: flex;
    align-items: center;
    padding: 12px;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    margin-bottom: 8px;
    background: white;
    transition: all 0.3s ease;
  }

  .ranking-item:last-child {
    margin-bottom: 0;
  }

  .ranking-item:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
  }

  .ranking-info {
    flex: 1;
    margin-left: 8px;
  }

  .ranking-name {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.875rem;
    margin-bottom: 2px;
  }

  .ranking-link {
    font-size: 0.75rem;
    color: var(--color-text-lighter);
  }

  .ranking-button {
    padding: 6px 12px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
  }

  .ranking-button:hover {
    background: var(--color-primary-dark);
    color: white;
  }

  /* Prevenção de CLS para headers no sidebar */
  .sidebar-area h3,
  .sidebar-area h4,
  .sidebar-area h5 {
    line-height: 1.2;
    min-height: 1.2em;
  }

  /* Prevenção de CLS para imagens do sidebar */
  .sidebar-area img {
    aspect-ratio: 1/1;
    object-fit: cover;
    background-color: #f5f5f5;
  }
</style>