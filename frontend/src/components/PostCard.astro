---
import { getImageUrl, formatDate, getPostDate } from '../lib/strapi';
import { decodeHtmlEntities } from '../lib/utils';
import OptimizedImage from './OptimizedImage.astro';

export interface Props {
  post: any;
  featured?: boolean;
  index?: number;
}

const { post, featured = false, index = 0 } = Astro.props;
const postDate = getPostDate(post);
const routePrefix = import.meta.env.PUBLIC_ROUTE_PREFIX || 'apostas';

// Loading strategy: eager para primeira imagem, lazy para demais
const loadingStrategy = index === 0 ? "eager" : "lazy";

// Sizes para imagens responsivas
// Em cards normais: 100vw em mobile, ~50% em tablet, ~33% em desktop
// Em cards featured: maior em todas as resoluções
const imageSizes = featured
  ? '(max-width: 640px) 100vw, (max-width: 1024px) 80vw, 1200px'
  : '(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 400px';
---

<article class={`post-card ${featured ? 'featured' : ''}`}>
  <a href={`/${routePrefix}/${post.slug}`} class="post-card-link">
    {post.coverImage && (
      <div class="post-card-image">
        <OptimizedImage
          media={post.coverImage}
          alt={post.coverImage?.alternativeText || post.title}
          sizes={imageSizes}
          loading={loadingStrategy}
          class="post-card-img"
        />
        {post.category?.name && (
          <span class="post-card-category">{post.category.name}</span>
        )}
      </div>
    )}
    
    <div class="post-card-content">
      <h3 class="post-card-title">{decodeHtmlEntities(post.title)}</h3>
      
      {post.excerpt && (
        <p class="post-card-excerpt">{decodeHtmlEntities(post.excerpt)}</p>
      )}
      
      <div class="post-card-meta">
        {post.authors?.length > 0 && post.authors[0]?.name && (
          <span class="post-card-author">{post.authors[0].name}</span>
        )}
        <time class="post-card-date" datetime={postDate}>
          {formatDate(postDate)}
        </time>
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .post-card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .post-card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-card-img {
    transform: scale(1.05);
  }

  .post-card-category {
    position: absolute;
    top: 12px;
    left: 12px;
    padding: 4px 12px;
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 4px;
    text-transform: uppercase;
    font-family: "Roboto", sans-serif;
  }

  .post-card-content {
    padding: 1.25rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-card-title {
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    font-family: "Merriweather", Georgia, serif;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card-excerpt {
    font-size: 0.9375rem;
    line-height: 1.5;
    color: var(--color-text-light);
    margin-bottom: 1rem;
    font-family: "Roboto", sans-serif;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .post-card-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: var(--color-text-light);
    font-family: "Roboto", sans-serif;
    margin-top: auto;
  }

  .post-card-author {
    font-weight: 500;
  }

  .post-card-author::after {
    content: '•';
    margin: 0 0.5rem;
  }

  .post-card-date {
    color: var(--color-text-light);
  }

  /* Featured card styles */
  .post-card.featured .post-card-title {
    font-size: 1.375rem;
    -webkit-line-clamp: 3;
  }

  .post-card.featured .post-card-excerpt {
    -webkit-line-clamp: 4;
  }

  @media (max-width: 768px) {
    .post-card-title {
      font-size: 1rem;
    }

    .post-card.featured .post-card-title {
      font-size: 1.125rem;
    }
  }
</style>