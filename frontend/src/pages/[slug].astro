    object-fit: cover;
    border-radius: 8px;
    margin: 1rem 0;
    display: block;
    background-color: #f5f5f5; /* Placeholder visual */
    transition: opacity 0.3s ease;
  }

  /* Para iframes e v√≠deos tamb√©m */
