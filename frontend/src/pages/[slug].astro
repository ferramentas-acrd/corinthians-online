            <a href={`/${routePrefix}/`}>P√°gina inicial</a>
          </li>
          <li class="breadcrumb-separator">‚Ä∫</li>
          <li class="breadcrumb-item">
            {post.category && (
              <a href={`/categoria/${post.category.slug}`}>{post.category.name}</a>
            )}
          </li>
