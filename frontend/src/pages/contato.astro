---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contato - Corinthians Online">
  <Header />
  
  <main class="flex-1">
    <div class="max-w-4xl mx-auto px-4 py-8">
      <div class="mb-8">
        <h1 class="text-4xl font-bold mb-4">Fale Conosco</h1>
        <p class="text-gray-600">Entre em contato com a redação do Corinthians Online</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <form class="bg-white border border-gray-200 rounded-lg p-6">
            <div class="mb-4">
              <label class="block text-sm font-medium mb-2">Nome completo</label>
              <input type="text" class="w-full border border-gray-300 rounded-lg px-3 py-2" placeholder="Seu nome">
            </div>
            <div class="mb-4">
              <label class="block text-sm font-medium mb-2">E-mail</label>
              <input type="email" class="w-full border border-gray-300 rounded-lg px-3 py-2" placeholder="seu@email.com">
            </div>
            <div class="mb-4">
              <label class="block text-sm font-medium mb-2">Assunto</label>
              <select class="w-full border border-gray-300 rounded-lg px-3 py-2">
                <option>Selecione um assunto</option>
                <option>Sugestão de pauta</option>
                <option>Erro no site</option>
                <option>Parceria</option>
                <option>Outros</option>
              </select>
            </div>
            <div class="mb-6">
              <label class="block text-sm font-medium mb-2">Mensagem</label>
              <textarea rows="5" class="w-full border border-gray-300 rounded-lg px-3 py-2" placeholder="Sua mensagem..."></textarea>
            </div>
            <button class="w-full bg-black text-white py-3 rounded-lg font-semibold hover:bg-gray-800">
              Enviar Mensagem
            </button>
          </form>
        </div>

        <div>
          <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
            <h3 class="font-bold text-lg mb-4">Informações de Contato</h3>
            <div class="space-y-3">
              <div>
                <div class="font-semibold">📧 E-mail da Redação</div>
                <div class="text-gray-600">redacao@corinthiansonline.com</div>
              </div>
              <div>
                <div class="font-semibold">📰 Sugestões de Pauta</div>
                <div class="text-gray-600">pautas@corinthiansonline.com</div>
              </div>
              <div>
                <div class="font-semibold">🤝 Parcerias</div>
                <div class="text-gray-600">comercial@corinthiansonline.com</div>
              </div>
            </div>
          </div>

          <div class="bg-black text-white rounded-lg p-6">
            <h3 class="font-bold text-lg mb-4">Siga-nos nas Redes Sociais</h3>
            <div class="space-y-2">
              <div>📘 Facebook: /CorinthiansOnline</div>
              <div>🐦 Twitter: @CorinthiansOn</div>
              <div>📷 Instagram: @corinthiansonline</div>
              <div>📺 YouTube: Corinthians Online</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>